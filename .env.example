# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=smartmeet

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES=7

# Email Configuration (if needed)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@example.com
# EMAIL_PASSWORD=your_email_password
# EMAIL_FROM=SmartMeet UNZA <noreply@smartmeet-unza.com>

# File Upload Configuration
MAX_FILE_UPLOAD=5 # in MB
UPLOAD_PATH=./uploads

# API Configuration
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_EXPIRATION=86400000 # 24 hours in milliseconds

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Security
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX=100 # limit each IP to 100 requests per windowMs

# Google OAuth (if implementing social login)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback
